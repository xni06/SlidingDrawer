<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:demo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.widget.SlidingDrawer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="48dp"
        android:orientation="vertical"
        demo:animateOnClick="true"
        demo:content="@+id/content"
        demo:handle="@+id/handle"
        demo:orientation="topDown"
        demo:tensionTween="#ff33b5e5">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff33b5e5"
            android:gravity="center"
            android:text="content"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="#ff0099cc"
            android:gravity="center"
            android:text="handle"
            android:textColor="@android:color/white" />
    </android.support.widget.SlidingDrawer>

</RelativeLayout>